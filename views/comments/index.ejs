        <% for (comment of comments){ %>
            <li><%= comment.text %> -- <b><%= comment.username %> </b> 
            <a href="/comments/<%= comment.id %> ">Detail</a> - <a href="/comments/<%= comment.id %>/edit">Editar</a></li>
        <% } %> 
    </ul>
    
</body>
